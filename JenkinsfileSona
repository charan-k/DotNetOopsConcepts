 environment {
    scannerHome = tool 'SonarQube Scanner – MSBuild'
  }
  steps {
    withSonarQubeEnv('My – Sonar') {
      echo "${scannerHome}"
      bat "${scannerHome}\\SonarScanner.MSBuild.exe begin /k:Son /n:{project-name} /v:build"
      bat 'msbuild project.sln /t:Rebuild /p:Configuration=Release'
      bat "${scannerHome}\\SonarScanner.MSBuild.exe end"
    }
  }